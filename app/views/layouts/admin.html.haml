%html
  %head
    %title Livescore
    <!--[if lt IE 9]>
    <script src="http://html5shim.googlecode.com/svn/trunk/html5.js" type="text/javascript"></script>
    <![endif]-->
    = stylesheet_link_tag "admin"
    = javascript_include_tag "admin"
    
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
  %body
    .navbar.navbar-fixed-top
      .navbar-inner
        .container
          %a.btn.btn-navbar{"data-target" => ".nav-collapse", "data-toggle" => "collapse"}
            %span.icon-bar
            %span.icon-bar
            %span.icon-bar
          =link_to "#{@current_tournament.name}", root_url, :class => 'brand'
          .nav-collapse
            %ul.nav
              %li{:class => ( @page == 'games' ? 'active' : '')}=link_to "Wedstrijden", admin_games_path
              %li{:class => ( @page == 'schedule' ? 'active' : '')}=link_to "Toernooi manager", admin_schedule_path
    .container
      = render "layouts/flashmessages"
      =yield